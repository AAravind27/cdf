{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["${basedir}/src/main/javascript/cdf"],
    "exclude": ["${basedir}/src/main/javascript/cdf-legacy", "${basedir}/src/main/javascript/lib"],
    "includePattern": ".+\\.js(doc)?$"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": true,
      "includeDate": true,
      "layoutFile": "${basedir}/src/doc/javascript/template/layout.tmpl",
      "staticFiles": {
        "include": [
          "${basedir}/src/doc/javascript/template/static"
        ]
      }
    }
  },
  "opts": {
    "template": "templates/default",
    "encoding": "utf8",
    "recurse": true,
    "private": true,
    "verbose": true
  }
}

<?js
var data = obj;
var self = this;
?>

<p>
    <a id="<?js= id+'_anchor' ?>" name="<?js= id+'_anchor' ?>"></a>
</p>

<table class="<?js= data.access != null ? data.access : 'public' ?> <?js= data.deprecated ? 'deprecated' : '' ?> <?js= data.inherited ? 'inherited' : '' ?>">
    <thead>
        <tr>
            <th>
                <?js= data.name + (data.signature || '')  ?>
                <?js if (data.returns && data.returns.length) { ?>
                :
                    <?js data.returns.forEach(function(r, i) { ?>
                      <?js= self.partial('type.tmpl', r.type.names) ?>
                      <?js if (i < data.returns.length-1) { ?>|<?js } ?>
                    <?js });
                  } ?>
                <?js= self.partial('modifiers.tmpl', data) ?>  
            </th>
        </tr>    
    </thead>
    <tbody>
        <tr>
            <td>
                <p>
                <?js if(!data.description){ ?>
                    <?js= data.summary ?> 
                <?js } else { ?>
                    <?js= data.description ?>
                <?js } ?>
                </p>

                <?js if (data.meta) {?>
                    <p>
                        <strong>Source: </strong> <?js= self.linkto(meta.shortpath) ?>, <?js= self.linkto(meta.shortpath, 'line ' + meta.lineno, null, 'line' + meta.lineno) ?>
                    </p>
                <?js } ?>  
                <?js if (data.inherited && data.inherits && !data.overrides) { ?>
                    <p>
                        <strong>Inherited from: </strong><?js= this.linkto(data.inherits, this.htmlsafe(data.inherits)) ?>
                    </p>
                <?js } ?>
                <?js if (data.params && params.length) { ?>
                    <?js= this.partial('params.tmpl', params) ?>
                <?js } ?>

                <?js if (data.fires && fires.length) { ?>
                    <p><strong>Fires:</strong>
                    <?js fires.forEach(function(f,i) { ?>
                        <?js= self.linkto(f) ?>
                        <?js if (i < data.length-1) { ?>, <?js } ?>
                    <?js }); ?>
                    </p>
                <?js } ?>

                <?js if (data.listens && listens.length) { ?>
                    <p><strong>Listens to Events:</strong>
                    <?js listens.forEach(function(f) { ?>
                        <?js= self.linkto(f) ?>
                        <?js if (i < data.length-1) { ?>, <?js } ?>
                    <?js }); ?>
                    </p>
                <?js } ?>

                <?js if (data.listeners && listeners.length) { ?>
                    <p><strong>Listeners of This Event:</strong>
                    <?js listeners.forEach(function(f) { ?>
                        <?js= self.linkto(f) ?>
                        <?js if (i < data.length-1) { ?>, <?js } ?>
                    <?js }); ?>
                    </p>
                <?js } ?>


                <?js if (data.exceptions && exceptions.length) { ?>
                    <p><strong>Throws:</strong></p>
                    <?js if (exceptions.length > 1) { ?><ul><?js
                        exceptions.forEach(function(r) { ?>
                        <li><?js= self.partial('exceptions.tmpl', r) ?></li>
                        <?js }); ?></ul>
                    <?js } else {
                        exceptions.forEach(function(r) { ?>
                            <?js= self.partial('exceptions.tmpl', r) ?>
                        <?js });
                } } ?>

                <?js if (data.returns && returns.length) { ?>
                    <p>
                        <strong>Returns:</strong>
                        <?js if (returns.length > 1) { ?><ul><?js
                            returns.forEach(function(r) { ?>
                                <li><?js= self.partial('returns.tmpl', r) ?></li>
                            <?js });
                        ?></ul><?js } else {
                            returns.forEach(function(r) { ?>
                                <?js= self.partial('returns.tmpl', r) ?>
                            <?js });
                        } ?> 
                    </p>
                <?js } ?>

                <?js if (data.examples && examples.length) { ?>
                    <p><strong>Example<?js= examples.length > 1? 's':'' ?></strong></p>
                    <?js= this.partial('examples.tmpl', examples) ?>
                <?js } ?>
            </td>
        </tr>
    </tbody>
</table>

